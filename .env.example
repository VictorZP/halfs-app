# Copy this file to .env and fill in your values

# Database — leave empty for SQLite (local mode)
# For Railway PostgreSQL:
# DATABASE_URL=postgresql://postgres:PASSWORD@monorail.proxy.rlwy.net:PORT/railway
DATABASE_URL=

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS origins (comma-separated) — add your Railway frontend URL
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost

# Auth credentials for the web interface
AUTH_USERNAME=admin
AUTH_PASSWORD=changeme
JWT_SECRET=your-random-secret-string-here

# Telegram (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# BetsAPI (optional)
BETSAPI_URL=https://betsapi.com/cio/basketball
